{

  "manifest_version": 2,
  "name": "Yandex.Market context menu search",
  "version": "1.0",

  "description": "Highlight a text → right click → search on Yandex.Market",

  "icons": {
    "16": "icons/yamarket16.png",
    "32": "icons/yamarket32.png",
    "48": "icons/yamarket48.png",
    "96": "icons/yamarket96.png"
  },

  "background": {
      "scripts": [
          "background.js"
      ]
  },

  "permissions": [
    "activeTab",
    "contextMenus"
  ]

}
